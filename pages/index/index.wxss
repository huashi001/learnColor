/**index.wxss**/
.container {
  text-align: center;
  width: 100%;
}
.text{
  display: block;
  height: 2rem;
  line-height: 2rem;
  color: orange;
}
.table {
  border: 0px solid darkgray;
  font-size: 0.8rem;
}
.first-tr{
  background: #ccc;
  color: white;
}
.fixed{
  position: fixed;
  top: 0;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
}

.td {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 23%;
  height: 100%;
  word-wrap:break-word;
}

.color{
   width: 8%;
}
